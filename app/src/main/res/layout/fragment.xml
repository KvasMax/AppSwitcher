<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/properties">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Включение"
            android:id="@+id/startService"
            android:textOff="Выкл"
            android:textOn="Вкл"
            android:layout_gravity="right" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/xpanel"
            android:max="20"
            />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ypanel"
            android:max="20"
            />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/widthpanel"
            android:max="20"
            />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/heightpanel"
            android:max="20"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SweepDirection" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/xAppPanel"
            android:max="20"
            />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/yAppPanel"
            android:max="20"
            />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AppCount"
            android:max="9"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AppOrder" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AppLayout" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AppAnim" />
    </LinearLayout>
    </ScrollView>